<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/dock"
    tools:context=".Activity.AccountSetting">

<ImageView
    android:id="@+id/img_profile_account"
    android:layout_weight="60"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:src="@drawable/sampleimage"
    android:scaleType="centerCrop"
    android:layout_height="0dp" />

    <Button
        android:id="@+id/but_edit"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:background="@drawable/pearl"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="edit    "
        android:layout_marginTop="-50dip"
        android:textColor="@color/blue"
        android:textSize="9dp"
        android:fontFamily="@font/quickbold"
        android:textAllCaps="false"
        android:src="@drawable/pearl"/>

    <LinearLayout
        android:layout_weight="48"
        android:orientation="vertical"
        android:layout_marginTop="-55dip"
        android:layout_width="match_parent"
        android:background="@drawable/curve"
        android:layout_height="0dp">



                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/babypink"
                    android:fontFamily="@font/ralesemi"
                    android:layout_marginLeft="20dp"/>


                <TextView
                    android:id="@+id/txt_account_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Michale Angelo, 23"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ralemedium"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"/>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email"
            android:textColor="@color/babypink"
            android:fontFamily="@font/ralesemi"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/txt_account_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Michale@gmail.com"
            android:textColor="@color/white"
            android:fontFamily="@font/ralethin"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status"
            android:textColor="@color/babypink"
            android:fontFamily="@font/ralesemi"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/txt_account_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="life is good"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/ralethin"
            android:layout_marginLeft="20dp"/>






    </LinearLayout>


</LinearLayout>